<div class="main-body">
  <section class="pic-info-column">
    <div class="profile-pic-container">
      <%= image_tag current_user.avatar_url, class: "profile-pic" %>
    </div>

    <div class="profile-info">
      <div class="profile-info-name">
        <%= current_user.name %><br>
      </div>
      <div class="profile-info-username">
        <%= current_user.login %><br>
      </div>
      <div class="profile-info-bio">
        <%= current_user.bio %>
      </div>
      <div class="profile-info-location">
        <%= current_user.location %>
      </div>
      <div class="profile-info-email">
        <%= current_user.email %>
      </div>
    </div>
  </section>

  <main class="repo-stats-column">
    <div class="repo-stats-header">
      <div class="repo-stats-link-container">
        <div>
          Overview
        </div>
        <div>
          Repositories
        </div>
        <div>
          Stars (<%= @starred.count %>)
        </div>
        <div>
          Followers (<%= @followers.count %>)
        </div>
        <div>
          Following (<%= @following.count %>)
        </div>
      </div>
    </div>

    <div class="pinned-repositories">
      <div>
        Pinned Repositories
      </div>
      <div>
        Customize your pinned repositories
      </div>
    </div>

    <div class="repo-grid">
      <% @repos.each do |repo| %>
        <%= repo.name %>
      <% end %>
    </div>

    <div class="recent-commits">
      <p>Contribution Activity - Recent Commits</p>
      <% 25.times do |i| %>
        <div class="commit-repo-name">
          <%= @recent_commits[i].repo_name %>
        </div>

        <div class="commit-date">
          <%= @recent_commits[i].date[0..9] %>
        </div>

        <div class="commit-message">
          <%= @recent_commits[i].message %>
        </div>
      <% end %>
    </div>

    <div class="followers-feed">
      <p>Followers Activity - Recent Commits</p>
      <% @followers_and_commits.each do |follower, commit| %>
        <div class="followers-feed-name">
          <%= follower.login %>
          <ul class="followers-recent-commits">
            <% 10.times do |i| %>
              <li><%= commit[i].repo_name %></li>
              <li><%= commit[i].date %></li>
              <li><%= commit[i].message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </main>

  <footer class="footer">

  </footer>
</div>
